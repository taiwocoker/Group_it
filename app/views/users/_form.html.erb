<div class="sign_form bg-custom-light rounded p-2 py-5">
  <div class="shadow d-flex align-items-center justify-content-center main_color text-white font-weight-bold text-center mb-5 p-5">
      <span class="h2">REGISTER</span>
  </div>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  

  <div class="form-group">



<div class="col-sm-12 mt-5">

<%= f.text_field :username, class: "form-control", id: "username", placeholder: "Enter username", autofocus: true %>

</div>

</div>

<div class="form-group">



<div class="col-sm-12 mt-5">

<%= f.file_field :image, class: "form-control", placeholder: "Upload profile picture" %>

</div>

</div>
 

<div class="form-group">

<div class="col-sm-12 w-100 my-auto">

<%= f.submit "Sign up", class: 'btn btn-primary btn-lg w-100' %>

</div>

</div>

<% end %>

<div class="text-center">
 If you have an account, then
    <%= link_to 'Log in', login_path %>

  </div>
</div>