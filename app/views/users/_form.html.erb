<div class="container contain">
<nav class="main_color">
  <ul class="ul_in_nav">
    <li><a class="page" href="/"><i class="fa arrow fa-arrow-left"></i></a></li>
    <li><a class="page" href="#"><h1>Register</h1></a></li>
    <li><a class="page" href="#"><h3></h3></a></li>
  </ul>
</nav>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  

  <div class="form-group">

<div class="control-label col-sm-2 mt-5">

<%= f.label :username %>

</div>

<div class="col-sm-8 mt-5">

<%= f.text_field :username, class: "form-control", id: "username", placeholder: "Enter username", autofocus: true %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2 mt-5">

<%= f.label :image %>

</div>

<div class="col-sm-8 mt-5">

<%= f.file_field :image, class: "form-control", placeholder: "Upload profile picture" %>

</div>

</div>
 

<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

<div class="col-sm-offset-4 col-sm-6 mt-4 text-info">
 If you have an account, then
    <%= link_to 'Log in', login_path %>

  </div>
</div>