  <path d="M13 5a2 2 0 0 0 2 2V5h-2zM3 5a2 2 0 0 1-2 2V5h2zm10 8a2 2 0 0 1 2-2v2h-2zM3 13a2 2 0 0 0-2-2v2h2zm7-4a2 2 0 1 1-4 0 2 2 0 0 1 4 0z"/>
</svg>
      </div>
      <div class="link_holder">
        <%= link_to 'My Expenses', expenses_path, class: "text-light h5" %>
      </div>
    </div>
    
    <div class="text-light mb-3 h4 text-left p-0 px-3 d-flex">
      <div class="svg_holder mr-3 h1">
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-wallet-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
