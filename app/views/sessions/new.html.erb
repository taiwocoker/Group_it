<div class="sign_form bg-custom-light rounded p-2 py-5">
  <div class="shadow d-flex align-items-center justify-content-center main_color text-white font-weight-bold text-center mb-5 p-5">
      <span class="h2">LOG IN</span>
  </div>


<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>


<div class="col-sm-12 mt-5">

<%= f.text_field :username, class: "form-control", id: "username", placeholder: "Enter username", autofocus: true %>

</div>

<div class="form-group">

<div class="col-sm-offset-3 col-sm-12 w-100">

<%= f.submit "Log in", class: 'w-100 bg-primary text-white border-custom p-2' %>

</div>

</div>

<% end %>
<div class="text-center">If you don't have an account, then
    <%= link_to 'Sign up', signup_path %>
  <div>
</div>